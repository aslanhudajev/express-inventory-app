extends ../HomePage

block content 
    div(class="p-8 w-full") 
        h1(class="uppercase text-4xl")= item.name

        div(class="item flex flex-col gap-4 mt-8")
            img(src=item.image, alt="item image" width="500" height="500")
            h2= `$${item.price}`
            span= `Stock: ${item.stock}`
            span(class="capitalize")= `Category: ${item.category.name}`
            p= item.description 
            br
            br
            div(class="flex flex-row gap-4")
                a(href=`${item.url}/update`)
                    button(class="px-4 py-2 bg-sky-600 text-white rounded-md") Edit 
                a(href=`${item.url}/delete`)
                    button(class="px-4 py-2 bg-sky-600 text-white rounded-md") Delete 
