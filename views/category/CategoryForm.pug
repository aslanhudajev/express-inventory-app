extends ../HomePage

block content 
    div(class="p-8 w-full")
        div 
            h1(class="text-4xl") Create category
        div(class="mt-8")
            form(class="flex flex-col gap-4 justify-start items-start" method="POST")
                label(for="name") Name 
                input(type="text" name="name" placeholder="Category name" value=newCategory ? newCategory.name : "" required)
                label(for="description") Description 
                input(type="text" name="description" placeholder="Short description..." value=newCategory ? newCategory.description : "" required)  
                button(class="px-4 py-2 bg-sky-600 text-white rounded-md" type="submit") Create
        if errors 
            div(class="flex flex-col text-red-600 mt-8") 
                each error in errors 
                    span= error.msg